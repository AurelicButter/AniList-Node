  },
  "keywords": [
    "anilist",
    "api",
    "anime",
    "node.js"
  ],
  "devDependencies": {
    "docdash": "^1.2.0",
    "eslint": "^7.21.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
